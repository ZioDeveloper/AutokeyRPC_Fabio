@model AutokeyRPC.Models.RPC_Telai

@{
    ViewBag.Title = "Edit";
}
<style>

    .fontDimensione {
        font-family: Verdana, Arial, Helvetica, sans-serif;
        font-size: 10px;
    }

    .grassetto {
        font-weight: bold;
        text-align: center;
    }

    .azzurro {
        background-color: #b3d7ff;
    }


    .azzurrino {
        background-color: #FFFFFF;
    }

    .bianco {
        background-color: #ffffff
    }

    .beige {
        background-color: #FFCFB9;
    }

    .grigio {
        background-color: #bfbfbf;
    }

    .grigetto {
        background-color: #e6e6e6;
    }

    .giallo {
        background-color: #FFFF00;
    }

    .verde {
        background-color: #00CC00;
    }

    .rosso {
        background-color: #FF0000;
    }

    .arancio {
        background-color: #F7BB40;
    }



    option.verde {
        background-color: #00CC00;
    }

    option.giallo {
        background-color: #FFFF00;
    }

    option.rosso {
